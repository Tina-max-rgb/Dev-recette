
{% extends 'base.html.twig'%}
{% block title %}TinRecype - Mes Recettes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h3>Ajouter une recette</h3>
        {% for message in app.flashes ('success') %}
            <div class='alert alert-success'>
             {{ message }}
            </div>
        {% endfor %}

        <div class="container mt-4">
            <h1>Mes recettes</h1>
         <a href="{{ path('recette.new')}}" class="btn btn-primary"> Créer une recette</a>
            <div class="count mt-4">
                   Il y a dans la liste Recettes 
                {% if recettes is defined and recettes.getTotalItemCount is defined %}
             
                    {% if recettes.getTotalItemCount is same as ([]) %}
                        0
                    {% else %}
                        {{ recettes.getTotalItemCount }}
                    {% endif %}
                  
                {% else %}
                    0 Il n'y a pas de recettes
                {% endif %}
            </div>

            <table class="table table-active">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Difficulty</th>
                    
                    </tr>
                </thead>
              
                      <tbody>
                    {% for recette in recettes %}
                    
                        <tr class="table-active">
                            <th scope="row">{{ recette.id }} </th>
                            <td>{{recette.name}}</td>
                            <td>{{recette.createdAt|date('d-m-Y') }}</td>
                          <td>
                            {% if recette.prix is null %}
                            Non renseigné
                            {% else %}
                            {{recette.prix}} 
                            {% endif %}
                            </td>
                             <td>
                            {% if recette.difficulty is null %}
                            Non renseigné
                            {% else %}
                            {{recette.difficulty}} 
                            {% endif %}
                            </td>
                        </tr>
                        
                        <td>
                         <a href="{{ path('recette.edit', { id: recette.id }) }}" class="btn btn-primary"
                        onclick="confirmModification(event)">Modifier</a>
                            </td>

                        <td>
                         <a href="{{ path('recette.delete', { id: recette.id }) }}" class="btn btn-danger"
                        onclick="confirmModification(event)">Supprimer</a>
                            </td>

                    {% endfor %}
                </tbody>
                
            </table>
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(recettes) }}
            </div>
            
        </div>
    </div>
  
{% endblock %}
